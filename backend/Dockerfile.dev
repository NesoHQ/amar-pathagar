FROM golang:1.23-alpine

WORKDIR /app

# Install Air for hot reload (using compatible version)
RUN go install github.com/cosmtrek/air@v1.49.0

# Copy go mod files
COPY go.mod ./

# Copy all source code (needed for go mod tidy)
COPY . .

# Download dependencies and generate go.sum
RUN go mod tidy
RUN go mod download

# Expose port
EXPOSE 8080

# Run with Air
CMD ["air", "-c", ".air.toml"]
